<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>

    <style name="CatchingWordsDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up_dialog_catching_words</item>
        <item name="android:windowExitAnimation">@anim/slide_down_dialog_catching_words</item>
    </style>

    <style name="DialogAnimationTwo">
        <item name="android:windowEnterAnimation">@anim/zoom_in_add_name</item>
        <item name="android:windowExitAnimation">@anim/zoom_out_add_name</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

</resources>
