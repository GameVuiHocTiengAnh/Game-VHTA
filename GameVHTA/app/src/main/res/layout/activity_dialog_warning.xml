<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginLeft="@dimen/DialogExitLeftandRight"
    android:layout_marginRight="@dimen/DialogExitLeftandRight"
    android:layout_marginBottom="@dimen/DialogBackGameBottomandTop"
    android:layout_marginTop="@dimen/DialogBackGameBottomandTop"
    tools:context="blackcore.tdc.edu.com.gamevhta.MainMenuActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="horizontal">
                <LinearLayout
                    android:gravity="bottom|center"
                    android:background="@drawable/warn_background"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                        <ImageView
                            android:id="@+id/btnWarn"
                            android:src="@drawable/btn_warning"
                            android:layout_marginBottom="@dimen/lvBottom"
                            android:layout_width="@dimen/warn"
                            android:layout_height="@dimen/warn" />
                </LinearLayout>
        </LinearLayout>

</LinearLayout>