<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/DialogOverGameLeftandRight"
    android:layout_marginRight="@dimen/DialogOverGameLeftandRight"
    android:layout_marginTop="10dp"
    tools:context="blackcore.tdc.edu.com.gamevhta.MainMenuActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal">

            <ImageView
                android:layout_marginBottom="15dp"
                android:layout_marginRight="@dimen/txtNameOverdialog"
                android:layout_marginLeft="@dimen/txtNameOverdialog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/background_name_over" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.3"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/background_score_win"
            android:orientation="horizontal">
            <LinearLayout
                android:gravity="center|right"
                android:layout_width="0dp"
                android:orientation="vertical"
                android:layout_height="match_parent"
                android:layout_weight="0.5">
                <ImageView
                    android:layout_marginRight="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/tryagains"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:orientation="vertical"
                android:layout_height="match_parent"
                android:layout_weight="0.8">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="left|bottom"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/txtNamePlayer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Name:"
                        android:textColor="#502618"
                        android:textSize="@dimen/txtScoreWingame" />
                    <TextView
                        android:layout_marginLeft="2dp"
                        android:maxLength="6"
                        android:id="@+id/lblPlayerNameGOver"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="onepiece"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/txtScoreWingame" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="left|center"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/lblPlayerNameGameOver"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Score:"
                        android:textColor="#502618"
                        android:textSize="@dimen/txtScoreWingame" />
                    <TextView
                        android:layout_marginLeft="2dp"
                        android:id="@+id/lblScoreGameOver"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/txtScoreWingame" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.6"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="bottom|right"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imgListOver"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/imagebottomOverGame"
                    android:layout_marginRight="@dimen/imageOverGame"
                    android:background="@color/tran"
                    android:src="@drawable/btnlist" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="bottom|left"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imgReplayOver"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/imagebottomOverGame"
                    android:layout_marginLeft="@dimen/imageOverGame"
                    android:background="@color/tran"
                    android:src="@drawable/btnreplay" />
            </LinearLayout>

            ,
        </LinearLayout>
    </LinearLayout>

</LinearLayout>