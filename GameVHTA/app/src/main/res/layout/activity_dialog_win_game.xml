<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/DialogwinGameLeftandRight"
    android:layout_marginRight="@dimen/DialogwinGameLeftandRight"
    android:layout_marginTop="@dimen/DialogTopicBottomandTop"
    android:layout_marginBottom="@dimen/DialogwinGameBottomandTop"
    android:orientation="horizontal"
    tools:context="blackcore.tdc.edu.com.gamevhta.MainMenuActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center|bottom"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/background_name_win" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.3"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/background_score_win"
            android:orientation="horizontal">
                <LinearLayout
                    android:gravity="center|right"
                    android:layout_width="0dp"
                    android:orientation="vertical"
                    android:layout_height="match_parent"
                    android:layout_weight="0.7">
                    <ImageView
                        android:layout_marginRight="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/goodjob"/>
                 </LinearLayout>
                 <LinearLayout
                        android:layout_width="0dp"
                        android:orientation="vertical"
                        android:layout_height="match_parent"
                        android:layout_weight="0.8">

                     <LinearLayout
                         android:layout_width="match_parent"
                         android:layout_height="0dp"
                         android:layout_weight="1"
                         android:gravity="left|bottom"
                         android:orientation="horizontal">

                         <TextView
                             android:id="@+id/txtNameScoreWin"
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:text="Score:"
                             android:textColor="#FFFFFF"
                             android:textSize="@dimen/txtNameWingame" />
                     </LinearLayout>

                     <LinearLayout
                         android:layout_width="match_parent"
                         android:layout_height="0dp"
                         android:layout_weight="1"
                         android:gravity="left"
                         android:orientation="horizontal">

                         <TextView
                             android:id="@+id/txtScoreWin"
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:text="0"
                             android:textColor="#502618"
                             android:textSize="@dimen/txtScoreWingame" />
                     </LinearLayout>
                </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:gravity="center|top"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imvNextGame"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/btnwinnext" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>