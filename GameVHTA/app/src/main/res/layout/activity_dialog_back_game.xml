<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="@dimen/DialogBackGameBottomandTop"
    android:layout_marginLeft="@dimen/DialogBackGameLeftandRight"
    android:layout_marginRight="@dimen/DialogBackGameLeftandRight"
    android:layout_marginTop="@dimen/DialogTopicBottomandTop"
    android:orientation="horizontal"
    tools:context="blackcore.tdc.edu.com.gamevhta.MainMenuActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/dialogchoosetheme"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:gravity="center"
                android:id="@+id/txtpause"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/txtdialogbackgame"
                android:textSize="@dimen/txtDialogBackgame"
                android:textColor="@android:color/holo_blue_light"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="bottom|right"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imgList"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/imageBottomBackGame"
                    android:background="@color/tran"
                    android:src="@drawable/btnlist" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="bottom|center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imgReplay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/imageBottomBackGame"
                    android:background="@color/tran"
                    android:src="@drawable/btnreplay" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="bottom|left"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imgResume"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/imageBottomBackGame"
                    android:background="@color/tran"
                    android:src="@drawable/btnresume" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>