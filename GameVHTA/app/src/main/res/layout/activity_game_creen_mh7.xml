<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="blackcore.tdc.edu.com.gamevhta.MainMenuActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/activity_game_mh7"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <blackcore.tdc.edu.com.gamevhta.button.PauseButton
                    android:id="@+id/btnPausegame"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/backGame"
                    android:layout_marginTop="@dimen/backGame" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtScore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/backgroud_word"
                    android:gravity="center_horizontal"
                    android:paddingLeft="20dp"
                    android:paddingTop="10dp"
                    android:textColor="#000"
                    android:textSize="@dimen/txtScore" />
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">


                <ImageView
                    android:id="@+id/img_markOne"
                    android:layout_width="50dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="35dp"
                    android:src="@drawable/mark" />

                <ImageView
                    android:id="@+id/imgAnimalOne"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:src="@drawable/screen_3_monkey" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_markTwo"
                    android:layout_width="50dp"
                    android:layout_height="25dp"
                    android:layout_marginRight="30dp"
                    android:src="@drawable/mark" />

                <ImageView
                    android:id="@+id/imgAnimalTwo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="30dp"
                    android:src="@drawable/screen_3_caw" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_markThree"
                    android:layout_width="50dp"
                    android:layout_height="25dp"
                    android:layout_marginRight="30dp"
                    android:src="@drawable/mark" />

                <ImageView
                    android:id="@+id/imgAnimalThree"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="30dp"
                    android:src="@drawable/screen_3_panda" />
            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_markFour"
                    android:layout_width="50dp"
                    android:layout_height="25dp"
                    android:src="@drawable/mark" />

                <ImageView
                    android:id="@+id/imgAnimalFour"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/screen_3_pig" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_markFive"
                    android:layout_width="50dp"
                    android:layout_height="25dp"
                    android:src="@drawable/mark" />

                <ImageView
                    android:id="@+id/imgAnimalFive"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/screen_3_rabbit" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_markSix"
                    android:layout_width="50dp"
                    android:layout_height="25dp"
                    android:src="@drawable/mark" />

                <ImageView
                    android:id="@+id/imgAnimalSix"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/screen_3_tiger" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>