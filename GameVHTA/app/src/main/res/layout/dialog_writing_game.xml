<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/DialogwinGameLeftandRight"
    android:layout_marginRight="@dimen/DialogwinGameLeftandRight"
    android:layout_marginTop="@dimen/DialogTopicBottomandTop"
    android:layout_marginBottom="@dimen/DialogwinGameBottomandTop"
    android:orientation="horizontal"
    tools:context="blackcore.tdc.edu.com.gamevhta.MainMenuActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.3"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/background_score_win"
            android:orientation="horizontal">

                 <LinearLayout
                        android:layout_width="0dp"
                        android:orientation="vertical"
                        android:layout_height="match_parent"
                        android:layout_weight="0.8">

                     <LinearLayout
                         android:layout_width="match_parent"
                         android:layout_height="0dp"
                         android:layout_weight="1"
                         android:gravity="center"
                         android:layout_marginTop="20dp"
                         android:orientation="horizontal">

                         <ImageView
                             android:id="@+id/imvWriting"
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:text="Score:"
                             android:textColor="#502618"
                             android:textSize="@dimen/txtNameWingame"
                             android:src="@drawable/animal"/>
                     </LinearLayout>

                     <LinearLayout
                         android:layout_width="match_parent"
                         android:layout_height="0dp"
                         android:layout_weight="1"
                         android:gravity="center"
                         android:orientation="vertical"
                         android:layout_margin="10dp">
                         <TextView
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:id="@+id/txtHintWord"
                             android:textColor="@android:color/holo_red_light"
                             android:textSize="20sp"/>

                         <EditText
                             android:id="@+id/edtEnterWord"
                             android:layout_width="match_parent"
                             android:layout_height="wrap_content"
                             android:textColor="#ffffff"
                             android:hint="write here"
                             android:textColorHint="#ffffff"
                             android:textSize="40sp" />
                     </LinearLayout>
                </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:gravity="center|top"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/btnCheckWriting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/btnwinnext" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>