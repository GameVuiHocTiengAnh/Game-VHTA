<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/guide"
    android:orientation="vertical"
    tools:context="blackcore.tdc.edu.com.gamevhta.GuideActivity">

    <blackcore.tdc.edu.com.gamevhta.button.BackButton
        android:id="@+id/btnBackGuide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/btnBackGuideLeft"
        android:layout_marginTop="@dimen/btnBackGuideTop"
        android:background="@color/tran"
        android:clickable="true" />

    <TextView
        android:id="@+id/txtGuide"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/guideTextBottom"
        android:layout_marginLeft="@dimen/guideTextLeft"
        android:layout_marginRight="@dimen/guideTextRight"
        android:scrollbars="vertical"
        android:textColor="@color/textGuide"
        android:textSize="@dimen/textsizeGuide" />

</LinearLayout>