<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/DialogBackGameLeftandRight"
    android:layout_marginRight="@dimen/DialogBackGameLeftandRight"
    android:layout_marginTop="10dp"
    android:orientation="horizontal"
    tools:context="blackcore.tdc.edu.com.gamevhta.MainMenuActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/background_name_win" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtScoreWin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="@dimen/DialogBackGameLeftandRight"
                android:layout_marginRight="@dimen/DialogBackGameLeftandRight"
                android:background="@drawable/end_game"
                android:gravity="center"
                android:lines="1"
                android:text="1000"
                android:textColor="#ffffff"
                android:textColorHint="#ffffff"
                android:textSize="@dimen/textScoreOverGame" />

            <EditText
                android:id="@+id/lblPlayerNameGameOver"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/DialogBackGameLeftandRight"
                android:layout_marginRight="@dimen/DialogBackGameLeftandRight"
                android:background="@drawable/end_game"
                android:gravity="center"
                android:hint="Enter your name!"
                android:lines="1"
                android:padding="10dp"
                android:text=""
                android:textColor="#ffffff"
                android:textColorHint="#ffffff"
                android:textSize="@dimen/textNameOverGame" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.6"
            android:gravity="center|top"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imvNextGame"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/imagebottomOverGame"
                android:src="@drawable/btnendgame" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>